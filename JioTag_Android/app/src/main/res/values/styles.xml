<resources>

    <style name="NoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="popupMenuStyle">@style/PopupMenu</item>-->
        <item name="popupMenuStyle">@style/PopupMenu.Example</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/textAppearanceSmallPopupMenu</item>
        <item name="android:textAppearanceLargePopupMenu">@style/textAppearanceLargePopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/PopupMenuListView</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="popupMenuStyle">@style/PopupMenu.Example</item>
        <item name="android:dropDownListViewStyle">@style/PopupMenuListView</item>
    </style>
    <style name="AllBackground" parent="Theme.AppCompat.NoActionBar">
        <item name="popupMenuStyle">@style/PopupMenu.Example</item>
        <item name="android:itemBackground">#FFFFFF</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItem</item>
        <item name="android:dropDownListViewStyle">@style/PopupMenuListView</item>
    </style>

    <style name="PopupMenuListView" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">@color/white</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="SpinnerItem">
        <item name="android:textColor">#00BFF2</item>
    </style>

    <style name="SpinnerDropDownItem">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/button_frame_blue</item>
        <item name="android:popupBackground">#00BFF2</item>
    </style>


    <style name="mySpinnerItemStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:itemBackground">@color/lite_blue</item>
    </style>

    <style name="RssiProgressbar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressBackgroundTint">#69f0ae</item>
        <item name="android:progressTint">#b71c1c</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:minHeight">20dp</item>
    </style>
    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:itemBackground">#00BFF2</item>
    </style>

    <style name="SampleMenu" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@drawable/popup_frame</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">17sp</item>
        <item name="overlapAnchor">true</item>
        <!--<item name="android:dropDownVerticalOffset">-36dip</item>-->
    </style>

    <style name="PopupMenu.Example" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@drawable/cross_img</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">17sp</item>
        <item name="android:dropDownVerticalOffset">20dp</item>
    </style>

    <style name="textAppearanceSmallPopupMenu" parent="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Small">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">17sp</item>
    </style>
    <style name="textAppearanceLargePopupMenu" parent="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="Theme_Holo_Dialog_Alert" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
    </style>

    <style name="NavigationViewStyle">
        <item name="android:textSize">17dp</item> <!-- menu item text size-->
        <item name="android:textColor">@color/white</item>
        <item name="iconSize">23dp</item>
    </style>

</resources>
