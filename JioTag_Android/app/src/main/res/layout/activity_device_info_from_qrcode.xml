<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardviewlayout_device_background_color"
    >

    <include
        android:id="@+id/emailConfirmToolbar"
        layout="@layout/toolbar"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_22"
        android:layout_below="@+id/emailConfirmToolbar"
        android:layout_marginRight="@dimen/margin_22"
        android:layout_marginBottom="@dimen/margin_25"
        android:layout_alignParentBottom="true"
        card_view:cardCornerRadius="@dimen/ten_dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/device_icon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/fifty_dp"
                android:src="@drawable/ic_device" />

            <TextView
                android:id="@+id/jiotag_device_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/device_icon"
                android:layout_marginLeft="@dimen/margin_24"
                android:layout_marginTop="@dimen/layout_margin_16"
                android:text="@string/jio_device_name"
                android:textColor="@color/black"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginRight="@dimen/margin_24"
                android:textSize="@dimen/twenty_dp"/>

            <TextView
                android:id="@+id/jiotag_device_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/jiotag_device_name"
                android:layout_marginLeft="@dimen/margin_24"
                android:layout_marginTop="@dimen/layout_margin_16"
                android:text="@string/jio_device_number"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginRight="@dimen/margin_24"
                android:textSize="@dimen/twenty_dp"/>

            <TextView
                android:id="@+id/jiotag_device_imei"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/jiotag_device_number"
                android:layout_marginLeft="@dimen/margin_24"
                android:layout_marginTop="@dimen/layout_margin_16"
                android:text="@string/jio_device_imei"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginRight="@dimen/margin_24"
                android:textSize="@dimen/twenty_dp"/>


            <Button
                android:id="@+id/attach_btn"
                android:layout_width="@dimen/adddevice_button_width"
                android:layout_height="@dimen/adddevice_button_height"
                android:background="@drawable/button_frame_blue"
                android:text="@string/attach_device"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:textAllCaps="false"
                android:layout_marginBottom="@dimen/margin_20"
                android:textColor="@android:color/white"
                android:textSize="@dimen/adddevice_content_font_size" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>