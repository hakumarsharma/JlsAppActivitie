<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardviewlayout_device_background_color">

    <ImageView
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/helpscreenIcon"
        android:src="@drawable/ic_instruction1" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/helpscreenIcon"
        android:text="@string/location_help_title"
        android:layout_marginTop="40dp"
        android:textSize="17dp"
        android:id="@+id/screenTitle"
        android:textColor="@color/white"
        android:gravity="center"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/screenTitle"
        android:text="@string/location_help_content"
        android:layout_marginTop="10dp"
        android:textSize="17dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/helpcontent"
        android:textColor="#EAEAEA"
        android:gravity="center"
        />



</RelativeLayout>