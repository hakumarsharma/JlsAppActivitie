<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/skip_login_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/adddevice_heading_height"
    android:paddingRight="@dimen/adddevice_heading_height"
    android:paddingLeft="@dimen/adddevice_heading_height"
    android:background="@color/cardviewlayout_device_background_color"
    app:ignore="NamespaceTypo">

    <CheckBox
        android:id="@+id/skip_login_check_box"
        android:layout_marginTop="@dimen/adddevice_heading_height"
        android:layout_marginBottom="@dimen/ten_dp"
        android:layout_marginLeft="@dimen/sixteen_dp"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/twenty_five_dp"
        android:buttonTint="@color/lite_blue"
        android:layout_height="@dimen/twenty_five_dp"/>

    <TextView
        android:id="@+id/skip_login_terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ten_dp"
        android:layout_toRightOf="@+id/skip_login_check_box"
        android:layout_centerInParent="true"
        android:text="Skip Login"
        android:textColor="@color/white"
        android:textSize="@dimen/twenty_dp" />

    <Button
        android:id="@+id/skip_login_btn_send_otp"
        android:layout_width="@dimen/adddevice_button_width"
        android:layout_height="@dimen/adddevice_button_height"
        android:layout_marginTop="@dimen/adddevice_button_margin_bottom"
        android:layout_marginBottom="@dimen/adddevice_button_margin_bottom"
        android:background="@drawable/button_frame_blue"
        android:layout_alignStart="@+id/skip_login_check_box"
        android:text="Continue"
        android:layout_below="@+id/skip_login_check_box"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="@dimen/adddevice_content_font_size" />
</RelativeLayout>