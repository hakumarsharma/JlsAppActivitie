<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/button_round_background"
    android:padding="1dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <RelativeLayout
            android:id="@+id/rel_card_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_selector"
            android:padding="5dp">

            <ImageView
                android:id="@+id/lefticon"
                android:layout_width="@dimen/text_size_80"
                android:layout_height="@dimen/text_size_80"
                android:layout_alignParentStart="true"
                android:src="@drawable/other_purple"
                android:visibility="visible" />

            <TextView
                android:id="@+id/device_details"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/cardviewlayout_device_heading_height"
                android:layout_toRightOf="@id/lefticon"
                android:layout_marginLeft="@dimen/cardviewlayout_device_heading_margin_left"
                android:layout_marginBottom="@dimen/five_dp"
                android:layout_marginTop="@dimen/cardviewlayout_device_heading_margin_top"
                android:freezesText="true"
                android:textStyle="bold"
                android:text="@string/cardviewlayout_device_heading_default"
                android:textSize="@dimen/cardviewlayout_device_heading_font_size" />

            <TextView
                android:id="@+id/device_status"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/cardviewlayout_device_status_height"
                android:layout_below="@+id/device_details"
                android:layout_alignStart="@+id/device_details"
                android:freezesText="true"
                android:text="@string/device_status"
                android:textColor="@color/cardview_device_status_color_gray"
                android:textSize="@dimen/cardviewlayout_device_status_font_size" />

            <TextView
                android:id="@+id/device_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/device_status"
                android:layout_alignStart="@+id/device_details"
                android:freezesText="true"
                android:textColor="#181818"
                android:text="@string/card_location"
                android:textSize="@dimen/cardviewlayout_device_distance_font_size" />

            <TextView
                android:id="@+id/tView"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/cardviewlayout_device_time_height"
                android:layout_below="@+id/device_distance"
                android:textSize="@dimen/cardviewlayout_device_time_font_size"
                android:layout_alignStart="@+id/device_details"
                android:textColor="#666666"
                android:text="@string/cardviewlayout_device_time_default" />

            <ImageButton
                android:id="@+id/connect_devices"
                android:layout_width="@dimen/cardviewlayout_device_dots_width"
                android:layout_height="@dimen/cardviewlayout_device_dots_height"
                android:layout_marginTop="@dimen/cardviewlayout_device_heading_margin_top"
                android:layout_below="@id/device_details"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/more_1"
                />
        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>
