<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardviewlayout_device_background_color"
    android:paddingBottom="@dimen/adddevice_heading_height"
    app:ignore="NamespaceTypo">
    <!-- Header aligned to top -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/cardviewlayout_device_background_color"
        android:id="@+id/appheader"
        android:gravity="center">

        <TextView
            android:id="@+id/app_header_text"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/adddevice_heading_height"
            android:text="@string/attach_jio_finder_heading"
            android:fontFamily="Bold"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/title_layout"
            android:layout_marginTop="@dimen/ten_dp"
            android:layout_marginBottom="@dimen/twenty_dp"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/adddevice_heading_font_size" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/appheader"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_marginLeft="@dimen/twenty_five_dp"
        android:layout_marginRight="@dimen/twenty_five_dp"
        android:background="@drawable/dialog_round_background"
        android:paddingBottom="@dimen/twenty_dp">

        <TextView
            android:id="@+id/attach_jio_finder_Header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/twenty_five_dp"
            android:layout_marginTop="@dimen/ten_dp"
            android:layout_marginRight="@dimen/header_text"
            android:text="@string/attach_jio_finder_Header"
            android:textColor="@android:color/black"
            android:textSize="@dimen/seventeen_sp"
            />

        <ImageView
            android:id="@+id/img_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/attach_jio_finder_Header"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/ten_dp"
            android:src="@drawable/attachfinder" />

        <Button
            android:id="@+id/btn_search_devices"
            android:layout_width="@dimen/adddevice_button_width"
            android:layout_height="@dimen/adddevice_button_height"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/ten_dp"
            android:layout_marginBottom="@dimen/twenty_dp"
            android:background="@drawable/button_frame_blue"
            android:text="@string/attach_jio_finder_search"
            android:textAllCaps="false"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/seventeen_sp" />

    </RelativeLayout>
</RelativeLayout>