<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false" android:drawable="@drawable/settings"/>
    <item android:state_pressed="false"
        android:drawable="@drawable/settings" /> <!-- pressed -->
    <item android:state_pressed="true"
        android:drawable="@drawable/settings_sel" android:color="@android:color/white"/> <!-- focused -->
    <item android:state_enabled="true" android:drawable="@drawable/settings"/> <!-- idle state -->
</selector>