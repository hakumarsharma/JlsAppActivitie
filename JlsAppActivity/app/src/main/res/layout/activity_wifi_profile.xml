<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colordialogbackground"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/fifty_dp"
        android:background="@drawable/asset_dialog_round_bkgd">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WiFi Profile"
            android:gravity="center_horizontal"
            android:textSize="@dimen/twenty_sp"
            android:id="@+id/wifi_hdr_text"
            android:textColor="@android:color/black"
            android:layout_marginTop="@dimen/sixteen_dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/wifi_bssid"
            android:hint="WiFi Mac address"
            android:textSize="16sp"
            android:background="@android:color/transparent"
            android:layout_marginTop="@dimen/twenty_dp"
            android:layout_marginBottom="@dimen/eigh_dp"
            android:layout_marginLeft="@dimen/eigh_dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/eigh_dp"
            android:background="@color/colordialogbackground"
            android:layout_height="@dimen/three_dp"
            android:layout_margin="@dimen/eigh_dp">
        </View>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/wifi_ssid"
            android:textSize="16sp"
            android:hint="WiFi AP Name"
            android:background="@android:color/transparent"
            android:layout_marginTop="@dimen/twenty_dp"
            android:layout_marginLeft="@dimen/eigh_dp"
            android:layout_marginBottom="@dimen/eigh_dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/eigh_dp"
            android:background="@color/colordialogbackground"
            android:layout_height="@dimen/three_dp"
            android:layout_margin="@dimen/eigh_dp">
        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rssi"
                android:hint="Signal Strength"
                android:inputType="none"
                android:textSize="16sp"
                android:layout_weight="0.5"
                android:background="@android:color/transparent"
                android:layout_marginTop="@dimen/twenty_dp"
                android:layout_marginLeft="@dimen/eigh_dp"
                android:layout_marginBottom="@dimen/eigh_dp"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/get_rssi"
                android:text="GET"
                android:background="@drawable/button_frame_blue"
                android:textSize="12sp"
                android:textColor="@color/design_default_color_background"
                android:layout_marginTop="@dimen/twenty_dp"
                android:layout_marginLeft="@dimen/eigh_dp"
                android:layout_marginBottom="@dimen/eigh_dp"
                android:layout_marginRight="@dimen/eigh_dp"
                android:visibility="gone"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/eigh_dp"
            android:background="@color/colordialogbackground"
            android:layout_height="@dimen/three_dp"
            android:layout_margin="@dimen/eigh_dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|bottom"
            android:layout_marginTop="@dimen/twenty_dp"
            android:layout_marginLeft="@dimen/eigh_dp"
            android:layout_marginBottom="@dimen/eigh_dp"
            android:layout_marginRight="@dimen/eigh_dp">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_next"
                android:text="Next"
                android:textSize="16sp"
                android:background="@drawable/button_frame_blue"
                android:textColor="@color/design_default_color_background">
            </Button>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>