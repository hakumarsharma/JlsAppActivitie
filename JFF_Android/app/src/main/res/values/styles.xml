<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:dropDownListViewStyle">@style/SpinnerStyle</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SplashScreen" parent = "Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="custom_tab_text" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/tabBarUnselectedColor</item>
    </style>

    <style name="NavigationViewStyle">
        <item name="android:textSize">17dp</item> <!-- menu item text size-->
        <item name="android:textColor">@color/white</item>
        <item name="iconSize">23dp</item>
    </style>
    <style name="MenuTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/geofence_background</item>
        <item name="colorPrimaryDark">@color/geofence_background</item>
        <item name="colorAccent">@color/geofence_background</item>
    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">19sp</item>
        <item name="android:dividerHeight">0.8dp</item>
    </style>

</resources>
