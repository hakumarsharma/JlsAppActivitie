<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/viewBackgroundColor">

    <include
        android:id="@+id/createGroupToolbar"
        layout="@layout/toolbar" />

    <RelativeLayout
        android:id="@+id/rel_layout"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_below="@id/createGroupToolbar"
        android:background="@drawable/layout_frame_blue">

        <ImageView
            android:id="@+id/userIconCreateGroup"
            android:layout_width="60dp"
            android:layout_height="59.98dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:src="@drawable/other" />


        <EditText
            android:id="@+id/groupName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/userIconCreateGroup"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="48dp"
            android:backgroundTint="@color/hintColor"
            android:hint="Name of the group"
            android:inputType="text"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="@color/hintColor"
            android:textCursorDrawable="@color/dull_text_color" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/createGroupIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rel_layout"
        android:layout_centerVertical="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/creategroup_default" />

    <Button
        android:id="@+id/createGroupInCreateGroupActivity"
        android:layout_width="232dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:background="@drawable/create_group_style"
        android:text="Add"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="17dp" />

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/chooseIcon_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/black_semi_transparent"
        android:orientation="vertical"
        android:visibility="invisible">

        <Button
            android:id="@+id/closeFrameLayout"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="right"
            android:layout_marginTop="40dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/close" />


        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/instruction_card"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:visibility="visible"
            card_view:cardCornerRadius="10dp"
            card_view:cardElevation="8dp"
            tools:context=".view.DashboardActivity">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

                <TextView
                    android:id="@+id/cardTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/twenty_dp"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:layout_marginRight="@dimen/twenty_dp"
                    android:backgroundTint="@color/white"
                    android:gravity="center"
                    android:text="@string/choose_group_icon"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/seventeen_dp" />

                <TextView
                    android:id="@+id/chooseGroupIconText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cardTitle"
                    android:layout_marginLeft="@dimen/margin_18"
                    android:layout_marginTop="22dp"
                    android:layout_marginRight="@dimen/fifteen_dp"
                    android:backgroundTint="@color/white"
                    android:gravity="center"
                    android:paddingBottom="@dimen/margin_12"
                    android:text="@string/choose_group_icon_text"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/seventeen_dp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/chooseGroupIconText"
                    android:layout_centerHorizontal="true"
                    android:background="@color/white">

                    <Button
                        android:id="@+id/homeGroupButton"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/ic_home_group" />


                    <Button
                        android:id="@+id/familyGroupButton"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="19dp"
                        android:layout_marginTop="20dp"
                        android:layout_toRightOf="@+id/homeGroupButton"
                        android:background="@drawable/ic_family_group" />


                    <Button
                        android:id="@+id/friendsGroupButton"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="19dp"
                        android:layout_marginTop="20dp"
                        android:layout_toRightOf="@+id/familyGroupButton"
                        android:background="@drawable/ic_friends_group" />


                    <Button
                        android:id="@+id/petGroupButton"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="19dp"
                        android:layout_marginTop="20dp"
                        android:layout_toRightOf="@+id/friendsGroupButton"
                        android:background="@drawable/ic_group_pet" />

                </RelativeLayout>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>


    </FrameLayout>

</RelativeLayout>