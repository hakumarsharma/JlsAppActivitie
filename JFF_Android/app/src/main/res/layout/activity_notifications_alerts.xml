<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loginFrameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.menu.NotificationsAlertsActivity">

    <include
        android:id="@+id/notificationToolbar"
        layout="@layout/toolbar" />

    <RelativeLayout
        android:id="@+id/noticationAlertsTab"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/notificationToolbar"
        android:background="@drawable/layout_frame_blue">

        <TextView
            android:id="@+id/notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_24"
            android:layout_marginTop="@dimen/margin_30"
            android:gravity="center"
            android:text="Notification"
            android:textColor="@color/white"
            android:textSize="@dimen/fourteen_dp" />

        <TextView
            android:id="@+id/alerts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/notifications"
            android:layout_marginLeft="@dimen/margin_40"
            android:layout_toRightOf="@+id/notifications"
            android:gravity="center"
            android:text="Alerts"
            android:textColor="@color/tabBarUnselectedColor"
            android:textSize="@dimen/fourteen_dp" />
    </RelativeLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/notoficationsViewPager"
        android:layout_width="match_parent"
        android:layout_below="@id/noticationAlertsTab"
        android:layout_height="wrap_content" />


</RelativeLayout>