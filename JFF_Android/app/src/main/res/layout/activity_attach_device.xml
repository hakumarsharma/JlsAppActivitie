<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardviewlayout_device_background_color">

    <include
        android:id="@+id/attachToolbar"
        layout="@layout/toolbar" />


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/attachToolbar"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/fifty_dp">

            <ImageView
                android:id="@+id/profile_icon"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/fifty_dp"
                android:src="@drawable/ic_login_signup" />

            <TextView
                android:id="@+id/device_number_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_icon"
                android:layout_marginLeft="@dimen/margin_12"
                android:layout_marginTop="@dimen/twenty_dp"
                android:gravity="center"
                android:text="@string/device_number_text"
                android:textColor="@color/mine_shaft"
                android:textSize="@dimen/seventeen_dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/device_number_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/device_number_title"
                android:layout_marginLeft="@dimen/margin_12"
                android:layout_marginTop="@dimen/fifteen_dp"
                android:gravity="center"
                android:text="@string/device_number_content"
                android:textColor="@color/timerColor"
                android:textSize="@dimen/fourteen_dp" />
            <TextView
                android:id="@+id/device_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/device_number_content"
                android:layout_marginLeft="@dimen/margin_22"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:text="@string/device"
                android:textColor="@color/light_blue"
                android:textSize="@dimen/ten_dp"
                android:textStyle="bold"
                android:visibility="invisible"/>

            <EditText
                android:id="@+id/device_edit_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/device_number"
                android:layout_marginLeft="@dimen/margin_22"
                android:layout_marginTop="@dimen/five_dp"
                android:background="@android:color/transparent"
                android:focusedByDefault="true"
                android:hint="Device phone number"
                android:inputType="phone"
                android:textColor="@color/mine_shaft"
                android:textSize="@dimen/seventeen_dp"
                android:textStyle="bold" />

            <View
                android:id="@+id/number_edit_line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/device_edit_name"
                android:layout_marginLeft="@dimen/margin_22"
                android:layout_marginTop="@dimen/five_dp"
                android:layout_marginRight="@dimen/sixteen_dp"
                android:background="@color/timerColor" />

            <TextView
                android:id="@+id/number_validation_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/number_edit_line"
                android:layout_marginLeft="@dimen/margin_22"
                android:layout_marginTop="@dimen/five_dp"
                android:gravity="left"
                android:text="Invalid phone number"
                android:textColor="@color/errorColor"
                android:textSize="@dimen/ten_dp"
                android:textStyle="bold"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/device_imei"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/number_validation_text"
                android:layout_marginLeft="@dimen/margin_22"
                android:gravity="left"
                android:text="@string/device_imei_text"
                android:textColor="@color/light_blue"
                android:textSize="@dimen/ten_dp"
                android:textStyle="bold"
                android:visibility="invisible"/>

            <EditText
                android:id="@+id/device_edit_imei"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/device_imei"
                android:layout_marginLeft="@dimen/margin_22"
                android:layout_marginTop="@dimen/five_dp"
                android:background="@android:color/transparent"
                android:focusedByDefault="true"
                android:hint="Device IMEI"
                android:inputType="phone"
                android:textColor="@color/mine_shaft"
                android:textSize="@dimen/seventeen_dp"
                android:textStyle="bold" />

            <View
                android:id="@+id/imei_edit_line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/device_edit_imei"
                android:layout_marginLeft="@dimen/margin_22"
                android:layout_marginTop="@dimen/five_dp"
                android:layout_marginRight="@dimen/sixteen_dp"
                android:background="@color/timerColor" />

            <TextView
                android:id="@+id/imei_validation_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imei_edit_line"
                android:layout_marginLeft="@dimen/margin_22"
                android:layout_marginTop="@dimen/five_dp"
                android:gravity="left"
                android:text="Invalid IMEI number"
                android:textColor="@color/errorColor"
                android:textSize="@dimen/ten_dp"
                android:textStyle="bold"
                android:visibility="invisible"/>



            <Button
                android:id="@+id/connect_btn"
                android:layout_width="@dimen/adddevice_button_width"
                android:layout_height="@dimen/adddevice_button_height"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/background_disable_button"
                android:text="@string/connect_button"
                android:textAllCaps="false"
                android:layout_marginBottom="20dp"
                android:textColor="@android:color/white"
                android:textSize="@dimen/adddevice_content_font_size" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>