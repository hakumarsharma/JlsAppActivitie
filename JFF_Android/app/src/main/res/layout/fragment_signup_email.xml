<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    android:layout_marginBottom="24dp"
    android:orientation="horizontal"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/signUpEmailImageIcon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_customiseprofile" />

        <TextView
            android:id="@+id/signUpEmailProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/signUpEmailImageIcon"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:text="@string/customizeProfile"
            android:textColor="@color/black"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/enterEmailTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/signUpEmailProfile"
            android:textAlignment="center"
            android:layout_marginTop="18dp"
            android:text="@string/customizeProfileTextView"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/emailTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/enterEmailTextView"
            android:layout_alignLeft="@id/signUpEmailEditText"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="45dp"
            android:text="Email ID"
            android:textColor="@color/cardviewlayout_device_background_color"
            android:textSize="10dp"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/signUpEmailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/emailTextView"
            android:hint="Email ID"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/wrongEmailErrorTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Invalid Email"
            android:visibility="invisible"
            android:textColor="@color/errorColor"
            android:textSize="10dp"
            android:layout_marginLeft="4dp"
            android:layout_alignLeft="@id/signUpEmailEditText"
            android:layout_below="@id/signUpEmailEditText"/>

        <TextView
            android:id="@+id/signupAddLaterTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/signUpEmailEditText"
            android:textColor="@color/lite_blue"
            android:textSize="12dp"
            android:layout_alignRight="@id/signUpEmailEditText"
            android:layout_marginRight="6dp"
            android:text="Add Later"/>

        <Button
            android:id="@+id/continueEmailSignup"
            android:layout_width="232dp"
            android:layout_height="36dp"
            android:layout_below="@id/signUpEmailEditText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:background="@drawable/selector"
            android:text="Continue"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/emailRequestOTPTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/continueEmailSignup"
           android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="@string/requestOTPTextView"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/emailTermConditionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/emailRequestOTPTextView"
            android:layout_centerHorizontal="true"
            android:text="Terms &amp; Conditions &amp; Privacy Policy"
            android:textColor="@color/lite_blue"
            android:textSize="14dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
