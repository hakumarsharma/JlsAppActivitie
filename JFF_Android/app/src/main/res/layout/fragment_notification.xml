<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dull_text_color"
    tools:context=".view.menu.NotificationFragment">

    <TextView
        android:id="@+id/notificationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="8dp"
        android:textSize="14dp"
        android:text="NOTIFICATION"
        android:textColor="@color/black" />

    <View
        android:id="@+id/notificationLine"
        android:layout_width="1dp"
        android:layout_height="15dp"
        android:layout_marginLeft="@dimen/margin_25"
        android:layout_below="@id/notificationTextView"
        android:background="@android:color/darker_gray"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/notificationsList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/notificationLine"
        android:divider="#806326"
        android:dividerHeight="1dp" />

</RelativeLayout>