<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dull_text_color"
    >

    <include
        layout="@layout/toolbar"
        android:id="@+id/editMemberToolbar"
        />
    <RelativeLayout
        android:id="@+id/blueBackground"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/editMemberToolbar"
        android:background="@drawable/layout_frame_blue"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/fifteen_dp"
        android:layout_marginTop="@dimen/twenty_dp"
        android:layout_below="@+id/blueBackground"
        android:text="Home"
        android:id="@+id/group_name"
        android:textSize="@dimen/fourteen_dp"
        android:textColor="@color/mine_shaft"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/editRecyclerList"
        android:layout_below="@+id/group_name"
        />


</RelativeLayout>