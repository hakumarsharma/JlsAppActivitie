<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/toolbar"
        android:id="@+id/profileToolbar"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileToolbar"
        android:background="@drawable/layout_frame_blue"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/profileicon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:id="@+id/userIcon"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userIcon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:text="User Name"
            android:id="@+id/userName"
            android:textColor="@color/white"
            android:textSize="@dimen/seventeen_dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+91 99999 000000"
            android:id="@+id/userNumber"
            android:layout_below="@+id/userName"
            android:layout_centerHorizontal="true"
            android:paddingBottom="25dp"
            android:textColor="@color/white"
            />

    </RelativeLayout>

    <Button
        android:id="@+id/scan_btn"
        android:layout_width="@dimen/adddevice_button_width"
        android:layout_height="@dimen/adddevice_button_height"
        android:background="@drawable/button_frame_blue"
        android:text="@string/edit_button"
        android:layout_above="@+id/manual_add"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:textColor="@android:color/white"
        android:textSize="@dimen/adddevice_content_font_size" />

</RelativeLayout>