<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    android:layout_marginBottom="24dp"
    android:orientation="horizontal"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/signupMobileNumberImageIcon"
            android:layout_width="80dp"
            android:layout_height="79.98dp"
            android:layout_marginLeft="145dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_login_signup" />

        <TextView
            android:id="@+id/signUpMobileNumberTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/signupMobileNumberImageIcon"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="30dp"
            android:text="@string/alternate_number_textview"
            android:textColor="@color/black"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/enterSignupMobileNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/signUpMobileNumberTextView"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="18dp"
            android:text="@string/alternate_number_security_textview"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/signUpNumberEditText"
            android:layout_width="312dp"
            android:layout_height="40dp"
            android:layout_below="@id/enterSignupMobileNumber"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="20dp"
            android:inputType="number"
            android:backgroundTint="@color/black"
            android:hint="Phone number"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/signupMobileNumberErrorCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Invalid mobile number"
            android:visibility="invisible"
            android:textColor="@color/errorColor"
            android:textSize="10dp"
            android:layout_marginLeft="4dp"
            android:layout_alignLeft="@id/signUpNumberEditText"
            android:layout_below="@id/signUpNumberEditText"/>

        <Button
            android:id="@+id/continueNumberSignup"
            android:layout_width="232dp"
            android:layout_height="36dp"
            android:layout_below="@id/signUpNumberEditText"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/selector"
            android:text="Continue"
            android:textAllCaps="false"
            android:textColor="@color/white" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>