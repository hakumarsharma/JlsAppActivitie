    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/layout_frame_blue"
        app:tabTextAppearance="@style/custom_tab_text"
        app:tabSelectedTextColor="@color/white"
        app:tabIndicatorHeight="0dp">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabGroups"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Groups\n." />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabPeople"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="People" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabDevices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Devices" />

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginLeft="-64dp"
        android:background="@color/navigate_profile_color"
        android:fitsSystemWindows="true"
        android:theme="@style/NavigationViewStyle"
        app:headerLayout="@layout/nav_header"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:menu="@menu/nav_menu">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:clickable="true"
            android:layout_marginBottom="30dp"
            >
            <ImageView
                android:id="@+id/logout_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:tint="@color/white"
                android:src="@drawable/logout"
                />
            <TextView
                android:id="@+id/footer_item_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/logout_icon"
                android:text="Logout" />
        </RelativeLayout>
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>