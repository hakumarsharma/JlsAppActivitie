<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listLayout"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    card_view:cardCornerRadius="10dp"
    android:layout_margin="10dp"
    card_view:cardElevation="8dp"
    android:orientation="horizontal"
    android:padding="16dp"
    tools:context=".view.ChooseGroupActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/firstButton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:visibility="invisible"
            android:layout_marginRight="18dp"
            android:layout_marginLeft="26dp"
            android:drawableTop="@drawable/ic_creategroup"
            android:background="@drawable/button_shape"
            android:layout_marginTop="28dp" />

        <TextView
            android:id="@+id/firstButtonTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34dp"
            android:textSize="14dp"
            android:visibility="invisible"
            android:layout_marginTop="110dp"/>

        <Button
            android:id="@+id/secondButton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="28dp"
            android:visibility="invisible"
            android:layout_marginRight="20dp"
            android:drawableTop="@drawable/ic_creategroup"
            android:background="@drawable/button_shape"
            android:layout_toRightOf="@id/firstButton" />

        <TextView
            android:id="@+id/secondButtonTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:layout_marginLeft="126dp"
            android:visibility="invisible"
            android:layout_marginTop="110dp"/>

        <Button
            android:id="@+id/thirdButton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="28dp"
            android:visibility="invisible"
            android:layout_marginRight="20dp"
            android:drawableTop="@drawable/ic_creategroup"
            android:background="@drawable/button_shape"
            android:layout_toRightOf="@id/secondButton" />

        <TextView
            android:id="@+id/thirdButtonTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:layout_marginLeft="220dp"
            android:visibility="invisible"
            android:layout_marginTop="110dp"/>

        <Button
            android:id="@+id/fourthButton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="28dp"
            android:visibility="invisible"
            android:layout_marginRight="20dp"
            android:drawableTop="@drawable/ic_creategroup"
            android:background="@drawable/button_shape"
            android:layout_toRightOf="@id/thirdButton" />

        <TextView
            android:id="@+id/fourthButtonTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:layout_marginLeft="312dp"
            android:visibility="invisible"
            android:layout_marginTop="110dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>