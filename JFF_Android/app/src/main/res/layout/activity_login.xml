<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/loginToolbar"
        layout="@layout/toolbar" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="45dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="25dp"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/jioLogoLogin"
                android:layout_width="220dp"
                android:layout_height="177dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/jio_locaiton" />

            <TextView
                android:id="@+id/trackntrack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/jioLogoLogin"
                android:layout_centerHorizontal="true"
                android:text="@string/loginSubText"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/userName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/trackntrack"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="@color/colorLogin"
                android:hint="User Name"
                android:inputType="text"
                android:textColor="#000000"
                android:textCursorDrawable="@color/colorLogin" />

            <EditText
                android:id="@+id/jioNumber"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userName"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="@color/colorLogin"
                android:hint="Jio Number"
                android:inputType="text"
                android:longClickable="false"
                android:textColor="#000000"
                android:imeOptions="actionDone"
                android:textCursorDrawable="@color/colorLogin" />

            <EditText
                android:id="@+id/loginOtp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/jioNumber"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/colorLogin"
                android:hint="OTP"
                android:inputType="number"
                android:maxLength="5"
                android:textColor="#000000"
                android:textCursorDrawable="@color/colorLogin" />

            <TextView
                android:id="@+id/requestOTP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/loginOtp"
                android:layout_marginLeft="115dp"
                android:layout_marginTop="7dp"
                android:layout_toRightOf="@+id/newUserText"
                android:text="@string/request_otp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp" />

            <Button
                android:id="@+id/login"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_below="@id/loginOtp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:background="@drawable/selector"
                android:text="Continue" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New User ?"
                android:id="@+id/newUserText"
                android:layout_below="@+id/login"
                android:layout_marginTop="15dp"
                android:layout_alignLeft="@id/login"
                android:textSize="13sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_here"
                android:id="@+id/registerHere"
                android:layout_below="@+id/login"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_toRightOf="@+id/newUserText"
                android:textSize="15sp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>