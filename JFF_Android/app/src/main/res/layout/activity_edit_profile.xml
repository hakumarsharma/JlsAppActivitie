<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dull_text_color">

    <include
        android:id="@+id/editToolbar"
        layout="@layout/toolbar" />

    <RelativeLayout
        android:id="@+id/bluebackground"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/editToolbar"
        android:background="@drawable/layout_frame_blue" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bluebackground"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/fifty_dp">

            <ImageView
                android:id="@+id/profile_icon"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/fifty_dp"
                android:src="@drawable/profileicon" />

            <TextView
                android:id="@+id/nameUser"
                android:layout_width="match_parent"
                android:layout_height="@dimen/eleven_dp"
                android:layout_below="@+id/profile_icon"
                android:layout_marginLeft="@dimen/margin_12"
                android:layout_marginTop="@dimen/fourty_three_dp"
                android:gravity="left"
                android:text="@string/name"
                android:textColor="@color/light_blue"
                android:textSize="@dimen/ten_dp"
                android:textStyle="bold"
                android:visibility="visible"/>

            <EditText
                android:id="@+id/update_edit_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameUser"
                android:layout_marginLeft="@dimen/margin_24"
                android:layout_marginTop="@dimen/five_dp"
                android:background="@android:color/transparent"
                android:focusedByDefault="true"
                android:inputType="text"
                android:text="Ashish Singh"
                android:textColor="@color/mine_shaft"
                android:textSize="@dimen/seventeen_dp"
                android:textStyle="bold"/>

            <View
                android:id="@+id/name_edit_line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/update_edit_name"
                android:layout_marginLeft="@dimen/sixteen_dp"
                android:layout_marginTop="@dimen/five_dp"
                android:layout_marginRight="@dimen/sixteen_dp"
                android:background="@color/mine_shaft"/>

            <TextView
                android:id="@+id/update_text_email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/eleven_dp"
                android:layout_below="@+id/name_edit_line"
                android:layout_marginLeft="@dimen/margin_12"
                android:layout_marginTop="@dimen/margin_30"
                android:gravity="left"
                android:text="@string/email_id"
                android:textColor="@color/light_blue"
                android:textSize="@dimen/ten_dp"
                android:textStyle="bold"
                android:visibility="visible"/>

            <EditText
                android:id="@+id/update_edit_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/update_text_email"
                android:layout_marginLeft="@dimen/margin_24"
                android:layout_marginTop="@dimen/five_dp"
                android:background="@android:color/transparent"
                android:focusedByDefault="true"
                android:inputType="text"
                android:text="abc@gmail.com"
                android:textColor="@color/mine_shaft"
                android:textStyle="bold"/>

            <View
                android:id="@+id/email_edit_line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/update_edit_email"
                android:layout_marginLeft="@dimen/sixteen_dp"
                android:layout_marginTop="@dimen/five_dp"
                android:layout_marginRight="@dimen/sixteen_dp"
                android:background="@color/mine_shaft"/>

            <TextView
                android:id="@+id/update_text_number"
                android:layout_width="match_parent"
                android:layout_height="@dimen/eleven_dp"
                android:layout_below="@+id/email_edit_line"
                android:layout_marginLeft="@dimen/margin_12"
                android:layout_marginTop="@dimen/margin_30"
                android:gravity="left"
                android:text="@string/mobile_number"
                android:textColor="@color/light_blue"
                android:textSize="@dimen/ten_dp"
                android:textStyle="bold"
                android:visibility="visible"/>

            <EditText
                android:id="@+id/update_edit_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/update_text_number"
                android:layout_marginLeft="@dimen/margin_24"
                android:layout_marginTop="@dimen/five_dp"
                android:background="@android:color/transparent"
                android:focusedByDefault="true"
                android:inputType="text"
                android:text="+9100000000"
                android:textColor="@color/mine_shaft"
                android:textStyle="bold"/>

            <View
                android:id="@+id/number_edit_line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/update_edit_number"
                android:layout_marginLeft="@dimen/sixteen_dp"
                android:layout_marginTop="@dimen/five_dp"
                android:layout_marginRight="@dimen/sixteen_dp"
                android:background="@color/mine_shaft"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/update_btn"
        android:layout_width="@dimen/adddevice_button_width"
        android:layout_height="@dimen/adddevice_button_height"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_frame_blue"
        android:text="@string/update_button"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="@dimen/adddevice_content_font_size" />
</RelativeLayout>