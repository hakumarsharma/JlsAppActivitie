<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/alert_background_color"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/alert_cardView"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/margin_32"
        android:layout_marginRight="@dimen/margin_32"
        card_view:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           >
            <TextView
                android:id="@+id/dialogue_title"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/twenty_dp"
                android:layout_marginRight="@dimen/twenty_dp"
                android:layout_marginTop="@dimen/twenty_dp"
                android:text="Invite"
                android:textSize="17dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/dialogue_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/dialogue_title"
                android:layout_marginLeft="@dimen/twenty_dp"
                android:layout_marginRight="@dimen/twenty_dp"
                android:textSize="17dp"
                android:textColor="@color/alert_text_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:weightSum="2"
                android:layout_below="@+id/dialogue_message"
                android:background="@color/alert_btn_selected_color"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_later"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/alert_btn_color"
                    android:clickable="true"
                    android:text="Later"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_view"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/alert_btn_selected_color"
                    android:clickable="true"
                    android:text="View"
                    android:textAllCaps="false"
                    android:layout_marginTop="3dp"
                    android:textSize="17dp"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>



</RelativeLayout>