<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/viewBackgroundColor">

    <include
        android:id="@+id/editMemberDetailsToolbar"
        layout="@layout/toolbar" />

    <RelativeLayout
        android:id="@+id/rel_layout"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_below="@id/editMemberDetailsToolbar"
        android:background="@drawable/layout_frame_blue">

        <ImageView
            android:id="@+id/userIconCreateGroup"
            android:layout_width="60dp"
            android:layout_height="59.98dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:src="@drawable/secondaryuser" />


        <EditText
            android:id="@+id/editUserName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/userIconCreateGroup"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="48dp"
            android:backgroundTint="@color/hintColor"
            android:hint="Name"
            android:inputType="text"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="@color/hintColor"
            android:textCursorDrawable="@color/dull_text_color" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/createGroupIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rel_layout"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/devices_default" />

    <Button
        android:id="@+id/updateName"
        android:layout_width="232dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:background="@drawable/create_group_style"
        android:text="Update"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="17dp" />


</RelativeLayout>