<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activeSessionLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/trackedByYouLayout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_margin="10dp"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/groupmemberIcon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/groupName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="20dp"
                android:text="Harish Kumar"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/session_motherIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@+id/groupmemberIcon"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="15dp"
                android:visibility="invisible"
                android:background="@drawable/secondaryuser" />

            <ImageView
                android:id="@+id/session_fatherIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="-15dp"
                android:layout_toRightOf="@+id/session_motherIcon"
                android:layout_marginTop="50dp"
                android:visibility="invisible"
                android:background="@drawable/secondaryuser" />

            <ImageView
                android:id="@+id/session_kidIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="-15dp"
                android:layout_toRightOf="@+id/session_fatherIcon"
                android:layout_marginTop="50dp"
                android:visibility="invisible"
                android:background="@drawable/secondaryuser" />

            <ImageView
                android:id="@+id/session_dogIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="-15dp"
                android:layout_toRightOf="@+id/session_kidIcon"
                android:layout_marginTop="50dp"
                android:visibility="invisible"
                android:background="@drawable/secondaryuser" />

            <TextView
                android:id="@+id/session_numberOfUsers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/session_dogIcon"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="52dp"
                android:text="+ 1 invited"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/trackedByYouOperationStatus"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="16dp"
                android:layout_marginRight="@dimen/ten_dp"
                android:src="@drawable/ic_more_black" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/trackedByYouOprationLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ten_dp"
        android:background="@drawable/dialog_lightblue_background"
        android:elevation="@dimen/ten_dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/trackedByYouClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/ten_dp"
            android:layout_marginRight="@dimen/ten_dp"
            android:src="@drawable/ic_close" />

        <TextView
            android:id="@+id/trackedByYouEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_22"
            android:layout_marginTop="@dimen/margin_18"
            android:text="Edit members"
            android:textColor="@color/white"
            android:textSize="@dimen/seventeen_dp" />

        <View
            android:id="@+id/trackedByYouEditEditLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/trackedByYouEdit"
            android:layout_marginLeft="@dimen/twenty_dp"
            android:layout_marginTop="@dimen/eight_dp"
            android:layout_marginRight="@dimen/fourteen_dp"
            android:background="@color/light_hash" />

        <TextView
            android:id="@+id/deleteAllMembers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/trackedByYouEditEditLine"
            android:layout_marginLeft="@dimen/margin_22"
            android:layout_marginTop="@dimen/ten_dp"
            android:paddingBottom="@dimen/margin_12"
            android:text="Delete group"
            android:textColor="@color/white"
            android:textSize="@dimen/seventeen_dp" />

    </RelativeLayout>
</RelativeLayout>