<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/signupFrameLayout"
    tools:context=".view.signinsignup.SigninSignupActivity">

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    android:layout_marginBottom="24dp"
    android:orientation="horizontal"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/signUpImageIcon"
            android:layout_width="80dp"
            android:layout_height="79.98dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_customiseprofile" />

        <TextView
            android:id="@+id/signUpcustomizeProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/signUpImageIcon"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:text="@string/customizeProfile"
            android:textColor="@color/black"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/enterNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/signUpcustomizeProfile"
            android:textAlignment="center"
            android:layout_marginTop="18dp"
            android:text="@string/customizeProfileTextView"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/enterNameTextView"
            android:layout_alignLeft="@id/signUpNameEditText"
            android:layout_marginTop="45dp"
            android:text="Name"
            android:textColor="@color/cardviewlayout_device_background_color"
            android:textSize="10dp"
            android:visibility="invisible" />


        <EditText
            android:id="@+id/signUpNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameTextView"
            android:layout_margin="15dp"
            android:backgroundTint="@color/black"
            android:hint="Name"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/wrongNameErrorTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/signUpNameEditText"
            android:layout_alignLeft="@id/signUpNameEditText"
            android:text="Invalid name"
            android:textColor="@color/errorColor"
            android:textSize="10dp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/continueSignup"
            android:layout_width="232dp"
            android:layout_height="36dp"
            android:layout_below="@id/signUpNameEditText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:background="@drawable/selector"
            android:text="Continue"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/signupRequestOTPTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/continueSignup"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="@string/requestOTPTextView"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/signupTermConditionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/signupRequestOTPTextView"
            android:layout_centerHorizontal="true"
            android:text="Terms &amp; Conditions &amp; Privacy Policy"
            android:textColor="@color/lite_blue"
            android:textSize="14dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
</FrameLayout>