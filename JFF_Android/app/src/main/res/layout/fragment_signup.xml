<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/signupFrameLayout"
    tools:context=".view.signinsignup.SigninSignupActivity">

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/signUpImageIcon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ic_customiseprofile" />

            <TextView
                android:id="@+id/signUpcustomizeProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/customizeProfile"
                android:layout_marginTop="30dp"
                android:textColor="@color/black"
                android:layout_below="@id/signUpImageIcon"
                android:textAlignment="center"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/enterNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:textAlignment="center"
                android:text="@string/customizeProfileTextView"
                android:layout_below="@id/signUpcustomizeProfile"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Name"
                android:textSize="10dp"
                android:visibility="invisible"
                android:textColor="@color/cardviewlayout_device_background_color"
                android:layout_marginLeft="4dp"
                android:layout_alignLeft="@id/signUpNameEditText"
                android:layout_below="@id/enterNameTextView"/>

            <EditText
                android:id="@+id/signUpNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/black"
                android:layout_below="@id/nameTextView"/>

            <TextView
                android:id="@+id/wrongNameErrorTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Invalid name"
                android:visibility="invisible"
                android:textColor="@color/errorColor"
                android:textSize="10dp"
                android:layout_marginLeft="4dp"
                android:layout_alignLeft="@id/signUpNameEditText"
                android:layout_below="@id/signUpNameEditText"/>

            <Button
                android:id="@+id/continueSignup"
                android:layout_width="232dp"
                android:layout_height="36dp"
                android:layout_marginTop="60dp"
                android:layout_centerHorizontal="true"
                android:textAllCaps="false"
                android:text="Continue"
                android:textColor="@color/white"
                android:background="@drawable/login_selector"
                android:layout_below="@id/signUpNameEditText"/>

            <TextView
                android:id="@+id/signupRequestOTPTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:layout_below="@id/continueSignup"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:text="@string/requestOTPTextView"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/signupTermConditionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:layout_below="@id/signupRequestOTPTextView"
                android:textColor="@color/lite_blue"
                android:layout_centerHorizontal="true"
                android:text="@string/terms_privacy_policy"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>


