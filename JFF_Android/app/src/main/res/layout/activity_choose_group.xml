<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hintColor">

    <include
        android:id="@+id/chooseGroupToolbar"
        layout="@layout/toolbar" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="230dp"
        android:background="@drawable/layout_frame_blue" />

    <Button
        android:id="@+id/navigateBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/back" />

    <TextView
        android:id="@+id/chooseGroupTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="10dp"
        android:text="Choose group"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <Button
        android:id="@+id/addGroup"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_toRightOf="@id/chooseGroupTextView"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_add_btn" />

    <ImageView
        android:id="@+id/userIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chooseGroupTextView"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/mother" />

    <EditText
        android:id="@+id/trackeeNameEditText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorLogin"
        android:gravity="center"
        android:hint="Name of the trackee"
        android:textColor="@color/white"
        android:textColorHint="@color/hintColor"
        android:textCursorDrawable="@color/colorLogin"
        android:textSize="17dp"
        android:layout_marginLeft="70dp"
        android:layout_below="@id/userIcon"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chooseGroupRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="232dp"
        android:background="@android:color/darker_gray"
        android:padding="4dp"
        android:scrollbars="vertical" />

</RelativeLayout>