<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dull_text_color">

    <include
        android:id="@+id/sosDetailToolbar"
        layout="@layout/toolbar" />

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/sosDetailToolbar"
        android:layout_gravity="center"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"
        android:orientation="horizontal"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/sosDetailTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="SOS Contacts"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/sosContact1TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sosDetailTextView"
                android:layout_marginTop="@dimen/margin_40"
                android:layout_marginLeft="@dimen/twenty_dp"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:text="Contact1" />

            <TextView
                android:id="@+id/contact1Number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:layout_below="@id/sosContact1TextView"
                android:layout_alignStart="@id/sosContact1TextView"
                android:textColor="@color/alert_text_color"/>

            <TextView
                android:id="@+id/sosContact2TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact2"
                android:layout_marginTop="@dimen/margin_30"
                android:textColor="@color/black"
                android:layout_alignStart="@id/sosContact1TextView"
                android:textSize="17dp"
                android:layout_below="@id/contact1Number"/>

            <TextView
                android:id="@+id/contact2Number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:layout_below="@id/sosContact2TextView"
                android:layout_alignStart="@id/sosContact1TextView"
                android:textColor="@color/alert_text_color"/>

            <TextView
                android:id="@+id/sosContact3TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact2"
                android:layout_marginTop="@dimen/margin_30"
                android:textColor="@color/black"
                android:layout_alignStart="@id/sosContact1TextView"
                android:textSize="17dp"
                android:layout_below="@id/contact2Number"/>

            <TextView
                android:id="@+id/contact3Number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:layout_below="@id/sosContact3TextView"
                android:layout_alignStart="@id/sosContact1TextView"
                android:textColor="@color/alert_text_color"/>

            <Button
                android:id="@+id/sosEditButton"
                android:layout_width="200dp"
                android:layout_height="@dimen/margin_40"
                android:layout_marginTop="80dp"
                android:background="@drawable/login_selector"
                android:layout_centerHorizontal="true"
                android:text="Edit"
                android:textColor="@color/white"
                android:layout_below="@id/contact3Number" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>