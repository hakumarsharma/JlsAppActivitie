<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/navigation_header"
    android:layout_marginTop="20dp"
    android:background="@color/navigate_profile_color">
    <ImageView
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:id="@+id/profileIcon"
        android:layout_centerHorizontal="true"
        android:background="@drawable/profileicon"
        android:layout_marginTop="20dp" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back"
        android:layout_alignParentRight="true"
        android:background="@drawable/back"
        android:layout_marginTop="15dp"
        android:layout_marginRight="@dimen/margin_24"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_account_name"
        android:textSize="@dimen/seventeen_dp"
        android:text="User Name"
        android:layout_below="@+id/profileIcon"
        android:layout_marginTop="23dp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_number"
        android:textSize="@dimen/seventeen_dp"
        android:text="+91000000000"
        android:layout_below="@+id/user_account_name"
        android:layout_marginTop="5dp"
        android:paddingBottom="15dp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>