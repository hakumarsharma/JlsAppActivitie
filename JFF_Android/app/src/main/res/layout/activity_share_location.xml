<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        layout="@layout/toolbar"
        android:id="@+id/shareLocationToolbar"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profile_layout"
        android:background="@drawable/layout_frame_blue"
        android:layout_below="@+id/shareLocationToolbar"
        >
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/profile_icon"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="@dimen/margin_25"
            android:src="@drawable/profileicon"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/profile_icon"
            android:layout_alignTop="@+id/profile_icon"
            android:layout_marginLeft="@dimen/margin_18"
            android:id="@+id/member_name"
            android:text="Connected"
            android:textSize="@dimen/seventeen_dp"
            android:textColor="@color/white"
            />
        <TextView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/member_name"
            android:layout_alignLeft="@+id/member_name"
            android:layout_marginTop="@dimen/five_dp"
            android:id="@+id/member_address"
            android:text="Connected Reliance Corporate Park, Thane-Belapur road Navi Mumbai 12.30 PM "
            android:textSize="@dimen/margin_12"
            android:textColor="@color/white"
            android:paddingBottom="@dimen/margin_25"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sharelocation"
            android:layout_alignParentRight="true"
            android:id="@+id/share_location"
            android:layout_alignTop="@+id/profile_icon"
            android:layout_marginRight="@dimen/margin_18"
            />
    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/profile_layout"
        android:id="@+id/map_fragment"
        />

</RelativeLayout>