<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dull_text_color"
    >
    <include
        layout="@layout/toolbar"
        android:id="@+id/howtotuseToolbar"
        />
    <RelativeLayout
        android:id="@+id/bluebackground"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/howtotuseToolbar"
        android:background="@drawable/layout_frame_blue">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QR Code\n."
            android:gravity="center"
            android:layout_marginLeft="@dimen/margin_24"
            android:layout_marginTop="@dimen/margin_30"
            android:id="@+id/qr_code_help"
            android:textSize="@dimen/fourteen_dp"
            android:textColor="@color/white"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manual"
            android:id="@+id/manual_help"
            android:gravity="center"
            android:textSize="@dimen/fourteen_dp"
            android:textColor="@color/tabBarUnselectedColor"
            android:layout_toRightOf="@+id/qr_code_help"
            android:layout_alignTop="@+id/qr_code_help"
            android:layout_marginLeft="@dimen/margin_40"
            />
    </RelativeLayout>


    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/howToUsePager"
        android:layout_margin="15dp"
        android:layout_below="@+id/bluebackground"
        />
</RelativeLayout>