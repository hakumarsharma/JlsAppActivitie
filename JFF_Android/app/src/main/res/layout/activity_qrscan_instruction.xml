<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardviewlayout_device_background_color"
    >

    <include
        android:id="@+id/scanConfirmToolbar"
        layout="@layout/toolbar"
        />

    <TextView
        android:id="@+id/qrcode_scan_help_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/margin_24"
        android:layout_marginTop="@dimen/fifteen_dp"
        android:text="@string/qrscan_instruction"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_below="@+id/scanConfirmToolbar"
        android:layout_marginRight="@dimen/margin_24"
        android:textSize="@dimen/adddevice_content_font_size"

        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/qrcode_scan_help_title"
        android:layout_above="@+id/scan_btn"
        android:layout_margin="60dp"
        android:layout_centerHorizontal="true"
        card_view:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/qrScan"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/qrcode" />


    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/scan_btn"
        android:layout_width="@dimen/adddevice_button_width"
        android:layout_height="@dimen/adddevice_button_height"
        android:background="@drawable/button_frame_blue"
        android:text="@string/scan_qr_code"
        android:layout_above="@+id/manual_add"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:layout_marginBottom="15dp"
        android:textColor="@android:color/white"
        android:textSize="@dimen/adddevice_content_font_size" />

    <Button
        android:id="@+id/manual_add"
        android:layout_width="@dimen/adddevice_button_width"
        android:layout_height="@dimen/adddevice_button_height"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/margin_24"
        android:text="@string/add_manual"
        android:layout_marginBottom="30dp"
        android:textAllCaps="false"
        android:background="@drawable/button_frame_white"
        android:textColor="@color/lite_blue"
        android:layout_marginRight="@dimen/margin_24"
        android:layout_alignParentBottom="true"
        android:textSize="@dimen/adddevice_content_font_size"

        />

</RelativeLayout>