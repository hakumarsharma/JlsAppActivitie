<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false" android:drawable="@drawable/notification_selected"/>
    <item android:state_pressed="false"
        android:drawable="@drawable/notification_selected" /> <!-- pressed -->
    <item android:state_pressed="true"
        android:drawable="@drawable/ic_notifications_black_24dp" android:color="@android:color/white"/> <!-- focused -->
    <item android:state_enabled="true" android:drawable="@drawable/notification_selected"/> <!-- idle state -->
</selector>