<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false" android:drawable="@drawable/ic_action_add_circle"/>
    <item android:state_pressed="false"
        android:drawable="@drawable/ic_action_add_circle" /> <!-- pressed -->
    <item android:state_pressed="true"
        android:drawable="@drawable/add" android:color="@android:color/holo_blue_bright"/> <!-- focused -->
    <item android:state_enabled="true" android:drawable="@drawable/ic_action_add_circle"/> <!-- idle state -->
</selector>