<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/asset_dialog_round_bkgd"
    android:padding="3dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/settings_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <RelativeLayout
            android:id="@+id/rel_card_layout_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/square_selector"
            >

            <ImageView
                android:id="@+id/feedback_lefticon"
                android:layout_marginTop="@dimen/ten_dp"
                android:layout_width="@dimen/twenty_five_dp"
                android:layout_height="@dimen/twenty_five_dp"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="@dimen/ten_dp"
                android:visibility="gone" />


            <TextView
                android:id="@+id/settings_header"
                android:layout_toRightOf="@id/feedback_lefticon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten_dp"
                android:layout_marginTop="@dimen/ten_dp"
                android:fontFamily="Bold"
                android:textColor="@color/black"
                android:freezesText="true"
                android:text="Header"
                android:textSize="@dimen/eighteen_sp" />

            <Switch
                android:id="@+id/settings_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/ten_dp"
                android:track="@drawable/switch_track_selector"
                android:thumbTint="@color/lite_blue"
                android:switchMinWidth="@dimen/sixty_dp"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/settings_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:layout_below="@+id/settings_header"
                android:layout_alignStart="@+id/settings_header"
                android:freezesText="true"
                android:text="Details"
                android:textColor="@color/black"
                android:textSize="@dimen/fourteen_sp" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>
