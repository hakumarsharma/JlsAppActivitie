<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewDeviceActivity">

    <include
        android:id="@+id/loginToolbar"
        layout="@layout/toolbar" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="45dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="25dp"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/jioLogoLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/jio_logo" />

            <TextView
                android:id="@+id/trackntrack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/jioLogoLogin"
                android:layout_centerHorizontal="true"
                android:text="@string/loginLebel"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/loginTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/trackntrack"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Please enter your registered"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/loginTextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/loginTextView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="mobile number"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/jioNumber"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/loginTextView2"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="25dp"
                android:backgroundTint="@color/colorLogin"
                android:hint="Jio Number"
                android:inputType="text"
                android:textColor="#000000"
                android:textCursorDrawable="@color/colorLogin" />


            <Button
                android:id="@+id/registration"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_below="@id/jioNumber"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@drawable/selector"
                android:text="Register" />

            <Button
                android:id="@+id/borqs"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_below="@id/registration"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/selector"
                android:text="BORQS" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>