<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.NewDeviceActivity">

    <include
        android:id="@+id/loginToolbar"
        layout="@layout/toolbar" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="45dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="25dp"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/jioLogoLogin"
                android:layout_width="220dp"
                android:layout_height="177dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/jio_locaiton" />

            <TextView
                android:id="@+id/trackntrack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/jioLogoLogin"
                android:layout_centerHorizontal="true"
                android:text="@string/loginLabel"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/loginTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/trackntrack"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Please enter your registered"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/loginTextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/loginTextView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="user details"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/jioEmailId"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/loginTextView2"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="@color/colorLogin"
                android:hint="Email Id"
                android:inputType="text"
                android:textColor="#000000"
                android:textCursorDrawable="@color/colorLogin" />

            <EditText
                android:id="@+id/jioPassword"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/jioEmailId"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/colorLogin"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:textCursorDrawable="@color/colorLogin" />


            <Button
                android:id="@+id/login"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_below="@id/jioPassword"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@drawable/selector"
                android:text="Login" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New User ?"
                android:id="@+id/newUserText"
                android:layout_below="@+id/login"
                android:layout_marginTop="15dp"
                android:layout_alignLeft="@id/login"
                android:textSize="13sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_here"
                android:id="@+id/registedHere"
                android:layout_below="@+id/login"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_toRightOf="@+id/newUserText"
                android:textSize="15sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot Password ?"
                android:id="@+id/forgetPass"
                android:layout_below="@+id/newUserText"
                android:layout_marginTop="15dp"
                android:layout_alignLeft="@id/newUserText"
                android:textSize="13sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/forget_password"
                android:id="@+id/clickForget"
                android:layout_below="@+id/registedHere"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_toRightOf="@+id/forgetPass"
                android:textSize="15sp"
                />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>